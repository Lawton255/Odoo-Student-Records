<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <!--Student Form View-->
    <record id="student_free_view_form" model="ir.ui.view">
        <field name="name">student.student.view.form</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <field name="photo" widget="image" class="oe_left oe_avatar" />
                    <div class="oe_title">
                        <h3>
                            <field name="name" placeholder="Student Fullname"/>
                        </h3>
                     </div>
                    <group>
                        <group>
                            <field name="age" />
                            <field name="gender" />
                        </group>
                        <group>
                            <field name="student_dob" />
                            <field name="student_blood_group"/>
                            <field name="nationality" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Student tree view-->
    <record id="student_tree_view" model="ir.ui.view">
        <field name="name">Student Tree</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <tree string="Students">
            <field name="name" />
            <field name="age" />
            <field name="gender" />
            <field name="student_blood_group" />
            <field name="nationality" />
            </tree>
        </field>
    </record>

    <record id="student_menu_action" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.student</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create The First Student
            </p>
        </field>
    </record>

    <menuitem
        id="school_menu"
        name="School"
        groups = "base.group_user"
        sequence="10"/>
    <menuitem
        id="school_student_menu"
        name="Student"
        parent="school_menu"
        action = "student_menu_action"
        groups = "base.group_user"
        sequence="10"/>
    </data>
</odoo>
